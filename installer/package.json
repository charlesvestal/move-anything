{
  "name": "move-everything-installer",
  "version": "1.0.0",
  "description": "Cross-platform installer for Move Everything",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.7",
    "ssh2": "^1.15.0"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.move-everything.installer",
    "productName": "Move Everything Installer",
    "files": [
      "electron/**/*",
      "ui/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "icons/icon.icns",
      "identity": "Developer ID Application: Charles Vestal (J4722B5MJW)",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": "nsis",
      "icon": "icons/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icons/icon.png"
    }
  }
}
